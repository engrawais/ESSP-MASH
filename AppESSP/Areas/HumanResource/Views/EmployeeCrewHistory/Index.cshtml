@{
    ViewBag.Title = "Employee Crew History - List (Bestway:ESSP)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<ESSPCORE.EF.VHR_EmployeeCrewChange>
<div class="page-header">
    <div class="page-header-content">
        <h4><i class="icon-arrow-right6 position-left text-black"></i> <span class="text-black">Employee Crew History</span></h4>
    </div>
</div>
<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Basic datatable -->
            <div class="panel panel-flat">
                <div class="breadcrumb-line bg-green-600">
                    <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
                    <ul class="breadcrumb">
                        <li><a href="index.html"> Dashboard</a></li>
                        <li class="active">Employee Crew History</li>
                    </ul>
                </div>

                <table class="table datatable-basic">
                    <thead>
                        <tr>
                            <th class="text-bold">
                                Crew Name
                            </th>
                            <th class="text-bold">
                                Start Date
                            </th>
                            <th class="text-bold">
                                End Date
                            </th>
                            <th class="text-bold">
                                Created Date
                            </th>
                            <th class="text-bold">
                                Edit
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CrewName)
                                </td>
                                <td>
                                    @if (item.StartDate != null)
                                    {
                                        @item.StartDate.Value.ToString("dd-MMM-yyyy")
                                    }
                                </td>
                                <td>
                                    @if (item.EndDate != null)
                                    {
                                        @item.EndDate.Value.ToString("dd-MMM-yyyy")
                                    }
                                </td>
                                <td>
                                    @if (item.CreatedDate != null)
                                    {
                                        @item.CreatedDate.Value.ToString("dd-MMM-yyyy")
                                    }
                                </td>
                                <td>
                                    <button type="button" id="btnGetEdit" onclick="EmployeeCrewHistoryGetEdit(@item.PEmployeeCrewChangeID)" class="btn border-info-600 btn-flat text-indigo-600 btn-icon btn-rounded"><i class="icon-pencil6"></i></button>
                                    <button type="button" id="btnGetDelete" onclick="EmployeeCrewHistoryGetDelete(@item.PEmployeeCrewChangeID)" class="btn border-warning text-warning-700 btn-flat btn-rounded"><i class="note-icon-trash"></i></button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /basic datatable -->
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->
<div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">

            <div class="modal-content ">
                <div id="modelBody">

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Areas/HumanResource/Scripts/EmployeeCrewHistory.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

    });

</script>


