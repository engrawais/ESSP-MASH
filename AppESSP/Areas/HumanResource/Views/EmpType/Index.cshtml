
@{
    ViewBag.Title = "Employment Type - List (Bestway:ESSP)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<ESSPCORE.EF.EmploymentType>
<div class="page-header">
    <div class="page-header-content">
        <h4><i class="icon-arrow-right6 position-left text-black"></i> <span class="text-black">Employment Type</span></h4>
    </div>
</div>
<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Basic datatable -->
            <div class="panel panel-flat">
                <div class="breadcrumb-line bg-grey">
                    <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
                    <ul class="breadcrumb">
                        <li><a href="index.html"> Dashboard</a></li>
                        <li class="active"> Employment Type</li>
                    </ul>
                    <ul class="breadcrumb-elements bg-blue-800" style="margin-right:-20px">
                        <li><a href="#" id="btnGetCreate"><i class="icon-add position-left"></i>Add Employment Type</a></li>
                    </ul>
                </div>

                <table class="table datatable-basic">
                    <thead>
                        <tr>
                            <th class="text-bold">
                                Employment Type Name
                            </th>
                            <th class="text-bold">
                                Status
                            </th>
                            <th class="text-bold">
                                Edit | Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmploymentTypeName)
                                </td>
                                <td>
                                    @(item.Status == true ? "Active" : "Inactive")
                                </td>
                                <td>
                                    <button type="button" id="btnGetEdit" onclick="EmpTypeGetEdit(@item.PEmploymentTypeID)" class="btn border-info-600 btn-flat text-indigo-600 btn-icon btn-rounded"><i class="icon-pencil6"></i></button>
                                    <button type="button" id="btnGetDelete" onclick="EmpTypeGetDelete(@item.PEmploymentTypeID)" class="btn border-warning text-warning-700 btn-flat btn-rounded"><i class="note-icon-trash"></i></button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /basic datatable -->
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->
<div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">

            <div class="modal-content ">
                <div id="modelBody">

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Areas/HumanResource/Scripts/EmpType.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        EmpTypeGetCreate();
    });
</script>


