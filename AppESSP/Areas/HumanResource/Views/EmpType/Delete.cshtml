@model ESSPCORE.EF.EmploymentType


@Html.HiddenFor(model => model.PEmploymentTypeID)
@Html.HiddenFor(model => model.EmploymentTypeName)

<div class="modal-header bg-blue">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">
        <i class="icon-menu7"></i> &nbsp;
    </h4>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-3 text-semibold">
                @Html.DisplayNameFor(model => model.EmploymentTypeName)
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.EmploymentTypeName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3"></div>
            <label class="col-md-7 checkbox-inline  text-semibold ">
                @Html.CheckBox("Status")
                Status
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </label>
        </div>
        @using (Html.BeginForm(null, null, FormMethod.Get, new { name = "formDeleteID", id = "formDeleteID" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.PEmploymentTypeID)
            @Html.HiddenFor(model => model.EmploymentTypeName)
        }
    </div>
</div>
<div class="modal-footer">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary bg-primary-300" })
    <input type="button" id="btnPostDelete" class="btn btn-danger bg-danger-800" value="Delete" />
</div>
<script type="text/javascript">
    $(document).ready(function () {
        EmpTypePostDelete();
    });
</script>
