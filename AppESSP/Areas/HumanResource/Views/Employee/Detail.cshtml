
@model ESSPCORE.EF.VHR_EmployeeProfile
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<div class="page-header ">

        <div class="page-header-content ">
            <h3><i class="icon-arrow-right6 position-left text-black text-center"></i> <span class="text-black">Profile</span></h3>
