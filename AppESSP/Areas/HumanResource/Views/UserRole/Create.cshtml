@model ESSPCORE.EF.AppUserRole

@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "formCreateID", id = "formCreateID" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header bg-blue">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <i class="icon-menu7"></i> &nbsp;User Role
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-3 text-semibold">User Role Name</div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.UserRoleName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserRoleName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">

        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn bg-grey" })
        <button type="submit" id="btnPostCreate" class="btn bg-blue-800" value="Submit">Submit</button>
    </div>

}
<script type="text/javascript">
    $(document).ready(function () {
        UserRolePostCreate();
    });
</script>


