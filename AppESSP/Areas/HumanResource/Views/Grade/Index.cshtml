@{
    ViewBag.Title = "Grade - List (Bestway:ESSP)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<ESSPCORE.EF.Grade>
<div class="page-header ">

    <div class="page-header-content">
        <h4><i class="icon-arrow-right6 position-left text-black"></i> <span class="text-black">Grades</span></h4>
    </div>
</div>
<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Basic datatable -->
            <div class="panel panel-flat">
                <div class="breadcrumb-line bg-grey">
                    <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
                    <ul class="breadcrumb">
                        <li><a href="index.html"> Dashboard</a></li>
                        <li class="active"> Grade</li>
                    </ul>
                </div>

                <table class="table datatable-basic ">
                    <thead>
                        <tr class="">
                            <th class="text-bold">
                                Grade Name
                            </th>
                            <th class="text-bold">
                                Status
                            </th>
                            <th class="text-bold">
                                Edit
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GradeName)
                                </td>
                                <td>
                                    @(item.Status == true ? "Active" : "Inactive")
                                </td>
                                <td>
                                    @*<a type="button " class="btn btn-primary" href="#" onclick="LoadDesig(@item.PGradeID)">Edit</a>*@
                                    <button type="button" id="btnGetEdit" onclick="LoadDesig(@item.PGradeID)" class="btn border-blue-800 btn-flat text-indigo-600 btn-xs btn-icon btn-rounded"><i class="icon-pencil6"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /basic datatable -->
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->
<!-- Modal -->
@using (Ajax.BeginForm("Edit", "JobTitle", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "modelBody" }, new { id = "frmGrade" }))
{

    <div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-blue-800 ">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Edit Grades</h4>
                    </div>
                    <div class="modal-body" id="modelBody">

                    </div>
                    <div class="modal-footer">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn bg-grey" })
                        <button type="button" id="btnSave" class="btn bg-blue-800" value="Submit">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript" src="~/Areas/HumanResource/Scripts/Grade.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        IndexJS();
    });


</script>