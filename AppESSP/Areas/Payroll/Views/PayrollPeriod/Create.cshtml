@model ESSPCORE.EF.PayrollPeriod

@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "formCreateID", id = "formCreateID" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header bg-blue-800">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <i class="icon-menu7"></i> &nbsp;Payroll Period
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="control-label col-md-2 text-semibold"> Name</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.PRName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PRName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Start Date</div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.PRStartDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.PRStartDate, "", new { @class = "text-danger" })

                </div>
                <div class="control-label col-md-2 text-semibold">End Date</div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.PREndDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.PREndDate, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Remarks</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Remarks)
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Fiscal Year</div>
                <div class="col-md-3">
                    @Html.DropDownList("FinancialYearID", null, new { @class = "btn btn-default col-lg-12 col-sm-12 col-md-12" })
                    @Html.ValidationMessageFor(model => model.FinancialYearID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        </div>
    <div class="modal-footer">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn bg-grey" })
        <button type="button" id="btnPostCreate" class="btn bg-blue-800" value="Submit">Submit</button>
    </div>

}
<script type="text/javascript">
    $(document).ready(function () {
        PayrollPeriodPostCreate();
    });
</script>




