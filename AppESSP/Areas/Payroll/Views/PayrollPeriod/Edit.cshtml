@model ESSPCORE.EF.PayrollPeriod

@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "formEditID", id = "formEditID" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header bg-blue">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <i class="icon-menu7"></i> &nbsp;Edit Payroll Period
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model=>model.PPayrollPeriodID)
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold"> Name</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.PRName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PRName)
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Start Date</div>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.PRStartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(model => model.PRStartDate)
                </div>
                <div class="control-label col-md-2 text-semibold">End Date</div>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.PREndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(model => model.PREndDate)
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Remarks</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Remarks)
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 text-semibold">Fiscal Year</div>
                <div class="col-md-4">
                    @Html.DropDownList("FinancialYearID", null, new { @class = "btn btn-default col-lg-12 col-sm-12 col-md-12" })
                    @Html.ValidationMessageFor(model => model.FinancialYearID)
                </div>
                <div class="control-label col-md-2 text-semibold">Stage</div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.PeriodStageID, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PeriodStageID)
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn bg-grey" })
        <button type="button" id="btnPostEdit" class="btn bg-blue-800" value="Submit">Submit</button>
    </div>

}
<script type="text/javascript">
    $(document).ready(function () {
        PayrollPeriodPostEdit();
    });
</script>




