@model IEnumerable<ESSPCORE.EF.ProcessRequest>

@{
    ViewBag.Title = "Process Request - List (Bestway:ESSP)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header ">

    <div class="page-header-content">
        <h4><i class="icon-arrow-right6 position-left text-black"></i> <span class="text-black">Process Request</span></h4>
    </div>
</div>
<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Basic datatable -->
            <div class="panel panel-flat">
                <div class="breadcrumb-line bg-grey">
                    <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
                    <ul class="breadcrumb">
                        <li><a href="index.html"> Dashboard</a></li>
                        <li class="active"> Process Request</li>
                    </ul>
                    <ul class="breadcrumb-elements bg-blue-800" style="margin-right:-20px">
                        <li><a href="#" id="btnGetCreate"><i class="icon-add position-left"></i> Add Process Request</a></li>
                    </ul>
                </div>

                <table class="table datatable-basic ">
                    <thead>
                        <tr>
                            <th class="text-bold">
                                @Html.DisplayNameFor(model => model.PeriodTag)
                            </th>
                            <th class="text-bold">
                                @Html.DisplayNameFor(model => model.DateFrom)
                            </th>
                            <th class="text-bold">
                                @Html.DisplayNameFor(model => model.DateTo)
                            </th>
                            <th class="text-bold">
                                @Html.DisplayNameFor(model => model.ProcessingDone)
                            </th>
                            <th class="text-bold">
                                @Html.DisplayNameFor(model => model.Criteria)
                            </th>

                            <th class="text-bold">
                                @Html.DisplayNameFor(model => model.EmpID)
                            </th>
                            <th class="text-bold">
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PeriodTag)
                                </td>
                                <td>
                                    @item.DateFrom.ToString("dd-MMM-yyyy")
                                </td>
                                <td>
                                    @item.DateTo.ToString("dd-MMM-yyyy")
                                </td>
                                <td>
                                    @if (item.ProcessingDone == true)
                                    {
                                        <div class="label label-success">Yes</div>
                                    }  @if (item.ProcessingDone == false)
                                    {
                                        <div class="label label-danger">No</div>
                                    }
                                </td>

                                <td>
                                    @if (item.Criteria == "L")
                                    {
                                        <div class="control-label">Location</div>
                                    }
                                    @if (item.Criteria == "E")
                                    {
                                        <div class="control-label">Employee</div>
                                    }
                                    @if (item.Criteria == "C")
                                    {
                                        <div class="control-label">Company</div>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmpNo)
                                </td>
                                <td>
                                    @item.CreatedDate.Value.ToString("dd-MMM-yyyy")
                                </td>
                                @*<td>
                                        <input type="button" id="btnGetEdit" onclick="ShiftGetEdit(@item.PAttProcesserSchedulerID)" value="Edit" class="btn btn-primary btn-icon" />
                                        <input type="button" id="btnGetDelete" onclick="ShiftGetDelete(@item.PShiftID)" value="Delete" class="btn btn-danger btn-icon" />
                                    </td>*@
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /basic datatable -->
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->
<!-- Modal -->
<div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">

            <div class="modal-content">
                <div id="modelBody">

                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Areas/Attendance/Scripts/ProcessRequest.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        ProcessRequestGetCreate();
    });
</script>
