@model ESSPCORE.EF.JobCardApp
<div class="modal-header bg-blue-800">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">
        <i class="icon-menu7"></i> &nbsp;Job Card
    </h4>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group">
            <h3 class="text-center text-semibold text-blue-800"> Are you sure you want to delete the Job Card?</h3>
        </div>
        @using (Html.BeginForm(null, null, FormMethod.Get, new { name = "formDeleteID", id = "formDeleteID" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.PJobCardAppID)
            @Html.HiddenFor(model => model.EmployeeID)
            @Html.HiddenFor(model => model.JobCardTypeID)
            @Html.HiddenFor(model => model.JobCardStageID)
        }
    </div>
</div>
<div class="modal-footer">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-custom-grey bg-grey" })
    <input type="button" id="btnPostDelete" class="btn btn-danger bg-danger-800" value="Delete" />

</div>
<script type="text/javascript">
    $(document).ready(function () {
        JobCardPostDelete();
    });
</script>

