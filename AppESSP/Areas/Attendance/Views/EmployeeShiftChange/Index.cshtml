@model List<ESSPCORE.EF.ShiftChangedEmp>

@{
    ViewBag.Title = "Employee Shift Change - List (Bestway:ESSP)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header ">
    <div class="page-header-content">
        <h4><i class="icon-arrow-right6 position-left text-black"></i> <span class="text-black">Employee Shift</span></h4>
    </div>
</div>
<!-- Page container -->
<div class="page-container">
    <!-- Page content -->
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Basic datatable -->
            <div class="panel panel-flat">
                <div class="breadcrumb-line bg-grey">
                    <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
                    <ul class="breadcrumb">
                        <li><a href="index.html"> Dashboard</a></li>
                        <li class="active">Employee Shift</li>
                        <li>@Html.ActionLink("Shifts", "Index", "Shift", new { area = "Attendance" }, null)</li>
                    </ul>
                    <ul class="breadcrumb-elements bg-blue-800" style="margin-right:-20px">
                        <li><a href="#" id="btnGetCreate"><i class="icon-add position-left"></i> Add Employee Shift</a></li>
                    </ul>

                </div>

                <table class="table datatable-basic ">
                    <thead>
                        <tr class="text-bold">
                            <th>
                                Start Date
                            </th>
                            <th class="text-bold">
                              End Date
                            </th>
                            <th class="text-bold">
                                DateCreated
                            </th>
                            <th class="text-bold">
                                ShiftName
                            </th>
                            <th class="text-bold">
                                EmployeeName
                            </th>
                            <th class="text-bold"></th>
                        </tr>
                        </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.StartDate.Value.ToString("dd-MMM-yyyy")
                                </td>
                                <td>
                                    @item.EndDate.Value.ToString("dd-MMM-yyyy")
                                </td>
                                <td>
                                    @item.DateCreated.Value.ToString("dd-MMM-yyyy")
                                </td>
                                <td>
                                    @item.Shift.ShiftName
                                </td>
                                <td>
                                    @item.EmpID
                                <td>
                                    <button type="button" id="btnGetEdit" onclick="ShiftCHEmpGetEdit(@item.PEmpShiftChangeID)" class="btn border-blue-800 btn-flat text-indigo-600 btn-xs btn-icon btn-rounded"><i class="icon-pencil6"></i></button>
                                    <button type="button" id="btnGetDelete" onclick="ShiftCHEmpGetDelete(@item.PEmpShiftChangeID)" class="btn border-warning text-warning-800 btn-flat btn-xs btn-rounded"><i class="note-icon-trash"></i></button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /basic datatable -->
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->
<!-- Modal -->
<div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div id="modelBody">

                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Areas/Attendance/Scripts/ShiftChangeEmp.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        ShiftCHEmpGetCreate();
    });
</script>