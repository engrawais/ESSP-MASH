@model ESSPCORE.EF.ShiftChangedEmp


@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "formCreateID", id = "formCreateID" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header bg-blue-800">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <i class="icon-menu7"></i> &nbsp;Shift Changed Employee
        </h4>
    </div>
    <div class="modal-body">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <section class="col-md-8">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-lg-2 col-md-2 col-sm-2 control-label text-semibold">Emp No</label>
                    <div class="col-lg-5 col-md-5 col-sm-5">
                        <div class="input-group">
                            <input id="EmpNo" autofocus name="EmpNo" type="text" class="form-control" placeholder="EMP-00001" />
                            <span class="input-group-btn">
                                <button type="button" name="btnGetEmployee" value="Search" class="btn btn-custom bg-blue-800" id="btnGetEmployee" style="padding-bottom:.6em">Search</button>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2 text-semibold">Shift</div>
                    <div class="col-md-6">
                        @Html.DropDownList("ShiftID", null, new { @class = "btn btn-default col-lg-12 col-sm-12 col-md-12" })
                        @Html.ValidationMessageFor(model => model.ShiftID, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group">
                    <div class="control-label col-md-2 text-semibold">Start Date </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2 text-semibold">End Date</div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
        </section>
        <section class="col-md-4">
            <div class="content-group">
                <div class="panel-body bg-grey border-radius-top text-center" style="height:50px">
                    <h6 class="text-bold" style="margin-top:-5px">
                        EMPLOYEE INFORMATION
                    </h6>
                </div>
                <div class="panel panel-flat">
                    <div class="table-responsive">
                        <table class="table table-condensed">

                            <tbody>
                                <tr>
                                    <td class="small text-bold">
                                        Name:
                                    </td>
                                    <td>
                                        <h6 id="EName" class="small"></h6>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="small text-bold">
                                        Position:
                                    </td>

                                    <td>
                                        <h6 id="EDesignation" class="small"></h6>
                                    </td>
                                </tr>

                                <tr>
                                    <td class="small text-bold">
                                        OU:
                                    </td>

                                    <td>
                                        <h6 id="EOU" class="small"></h6>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="small text-bold">
                                        DOJ:
                                    </td>
                                    <td>
                                        <h6 id="EDOJ" class="small"></h6>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
        &nbsp;
    </div>
        <div class="modal-footer">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-custom-grey bg-grey" })
            <button type="button" id="btnPostCreate" class="btn btn-custom bg-blue-800" value="Submit">Submit</button>
        </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        ShiftCHEmpPostCreate();
        LoadEmployeeInformation();
    });
</script>
