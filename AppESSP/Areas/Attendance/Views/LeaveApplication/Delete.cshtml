@model ESSPCORE.EF.LeaveApplication
<div class="modal-header bg-blue-800">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">
        <i class="icon-menu7"></i> &nbsp; Delete Leave Application
    </h4>
</div>
@using (Html.BeginForm(null, null, FormMethod.Get, new { name = "formDeleteID", id = "formDeleteID" }))
{

    @Html.AntiForgeryToken()@Html.HiddenFor(model => model.PLeaveAppID)
    @Html.HiddenFor(model => model.LeaveDate)
    @Html.HiddenFor(model => model.LeaveTypeID)
    @Html.HiddenFor(model => model.EmpID)
    @Html.HiddenFor(model => model.FromDate)
    @Html.HiddenFor(model => model.ToDate)
    @Html.HiddenFor(model => model.NoOfDays)
    @Html.HiddenFor(model => model.CalenderDays)
    @Html.HiddenFor(model => model.IsHalf)
    @Html.HiddenFor(model => model.FirstHalf)
    @Html.HiddenFor(model => model.HalfAbsent)
    @Html.HiddenFor(model => model.LeaveReason)
    @Html.HiddenFor(model => model.LeaveAddress)
    @Html.HiddenFor(model => model.CreatedBy)
    @Html.HiddenFor(model => model.LeaveStageID)
    @Html.HiddenFor(model => model.LineManagerID)
    @Html.HiddenFor(model => model.ApprovedBy)
    @Html.HiddenFor(model => model.Active)
    @Html.HiddenFor(model => model.RejectRemarks)
    @Html.HiddenFor(model => model.IsDeducted)
    @Html.HiddenFor(model => model.TimeOffice)
    @Html.HiddenFor(model => model.ReplamentEmpID)
    @Html.HiddenFor(model => model.HasMedicalCertificate)
    @Html.HiddenFor(model => model.IsAccum)
    @Html.HiddenFor(model => model.ReturnDate)
    @Html.HiddenFor(model => model.FinancialYearID)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                <h3 class="text-center"> Are you sure you want to delete this Leave Application?</h3>
                <div class="text-center" >
                    <h5>
                        @Html.ValidationMessageFor(model => model.LeaveDate, "", new { @class = "text-danger" })
                    </h5>
                </div>
            </div>
        </div>
    </div>
}
<div class="modal-footer">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-custom-grey bg-grey" })
    <input type="button" id="btnPostDelete" class="btn btn-danger bg-danger-800" value="Delete" />
</div>
<script type="text/javascript">
    $(document).ready(function () {
        LvAppPostDelete();
    });
</script>
