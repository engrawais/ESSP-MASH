
@model ESSPCORE.EF.VAT_LeaveApplication
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page container -->
<body onload="window.print()">
    <div class="page-container ">
        <div class="page-content">
            <div class="col-md-2">
            </div>
            <div class="col-md-8 ">
                <div class="timeline-row">

                    <div class="panel panel-flat ">

                        <div class="panel-heading col-md-12">

                            <div class="col-md-10">
                                <h3 class="panel-title text-bold">
                                    Leave Application of <span class="text-black"> @Html.DisplayFor(model => model.EmployeeName) </span> : <span class="text-black"> @Html.DisplayFor(model => model.OEmpID) </span>
                                </h3>


                            </div>
                        </div>
                        <div class="panel-body">

                            @*<span class="h4">EMPLOYEE PROFILE OF  @Model.FullName : @Model.EmpID</span>*@



                            <div class=" col-sm-10">
                                <div class="profile-user-info-striped">

                                    <h2><a id="OfficialInfo" class="text-black">Personal Information</a></h2>
                                    <table class="table table-hover">
                                        <tbody>
                                            <tr>
                                                <th class="profile-info-name">

                                                    Leave ID

                                                </th>

                                                <td class="profile-info-value">
                                                    @Html.DisplayFor(model => model.PLeaveAppID)
                                                </td>
                                            </tr>


                                            <tr>
                                                <th class="profile-info-name">
                                                    Applying Date
                                                </th>

                                                <td>
                                                    @Model.LeaveDate.ToString(6)

                                                </td>
                                            </tr>
                                            <tr>
                                                <th class="profile-info-name">
                                                    Designation
                                                </th>

                                                <td>
                                                    @Html.DisplayFor(model => model.JobTitleName)
                                                </td>
                                            </tr>

                                            <tr>
                                                <th class="profile-info-name">
                                                    Department Name
                                                </th>

                                                <td>
                                                    @Html.DisplayFor(model => model.OUCommonName)
                                                </td>
                                            </tr>
                                            <tr>
                                                <th class="profile-info-name">
                                                    Location Name
                                                </th>

                                                <td>
                                                    @Html.DisplayFor(model => model.LocationName)
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>

                                                </th>

                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>


                                    <h2><a id="OfficialInfo" class="text-black">Leave Information </a></h2>
                                    <table class="table table-hover">
                                        <tbody>

                                            <tr>
                                                <th class="profile-info-name">
                                                    Leave Type
                                                </th>

                                                <td>
                                                    <span>
                                                        @Html.DisplayFor(model => model.LeaveTypeName)
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th class="profile-info-name">
                                                    Start Date
                                                </th>

                                                <td>
                                                    <span>
                                                        @Model.FromDate.ToString("dd-MMM-yyyy")
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th class="profile-info-name">
                                                    End Date
                                                </th>

                                                <td>
                                                    <span>
                                                        @Model.ToDate.ToString("dd-MMM-yyyy")
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th class="profile-info-name">
                                                    Return Date
                                                </th>

                                                <td>
                                                    <span>
                                                        @if (Model.ReturnDate != null)
                                                        {
                                                            @Model.ReturnDate.Value.ToString("dd-MMM-yyyy")
                                                        }
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th class="profile-info-name">
                                                    Working Days
                                                </th>

                                                <td>
                                                    <span>
                                                        @Html.DisplayFor(model => model.NoOfDays)
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th class="profile-info-name">
                                                    Calendar Days
                                                </th>
                                                <td>
                                                    <span>
                                                        @Html.DisplayFor(model => model.CalenderDays)
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th class="profile-info-name">
                                                    Leave Reason
                                                </th>

                                                <td>
                                                    <span>
                                                        @Html.DisplayFor(model => model.LeaveReason)
                                                    </span>
                                                </td>
                                            </tr>
                                         
                                            <tr>
                                                <th>

                                                </th>

                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
