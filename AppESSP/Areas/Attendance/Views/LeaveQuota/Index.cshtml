@model List<ESSPCORE.Attendance.VMLeaveQuotaChild>
@{
    ViewBag.Title = "Leave Quota - List(Bestway:ESSP)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header ">

    <div class="page-header-content">
        <h4><i class="icon-arrow-right6 position-left text-black"></i> <span class="text-black">Leave Quota</span><span class="pull-right text-black">Financial Year : @Html.DropDownList("FinancialYearID", null, new { @class = "btn btn-default  dropdown-toggle dropdown" })</span></h4>

    </div>
</div>
<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Basic datatable -->
            <div class="panel panel-flat">
                <div class="breadcrumb-line bg-grey">
                    <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
                    <ul class="breadcrumb">
                        <li><a href="index.html"> Dashboard</a></li>
                        <li class="active"> Leave Quota</li>
                    </ul>
                    <ul class="breadcrumb-elements">
                        <li>
                            <button class="btn btn-lg btn-custom text-bold bg-blue-800 " style="margin-right:-20px"><i class="icon-add position-left"></i><a href="~/Attendance/LeaveQuota/Create1"> Add Leave Quota</a></button>
                        </li>
                    </ul>
                </div>

                <table class="table datatable-basic ">
                    <thead>
                        <tr>
                            <th class="text-bold">
                                Emp No
                            </th>
                            <th class="text-bold">
                                Emp Name
                            </th>
                            <th class="text-bold">
                                Designation
                            </th>
                            <th class="text-bold">
                                CL
                            </th>
                            <th class="text-bold"> AL</th>
                            <th class="text-bold"> ACC</th>
                            <th class="text-bold">SL</th>
                            <th class="text-bold">EAL</th>
                            <th class="text-bold">CME</th>
                            <th class="text-bold">CPL</th>
                            <th class="text-bold">Details</th>

                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobTitleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ACCL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EAL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CPL)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown"><i class="icon-menu7"></i> <span class="caret"></span></button>
                                    <ul class="dropdown-menu dropdown-menu-right">

                                        <li><a href="@Url.Action("LeaveQuotaDetail", "LeaveQuota", new { id = item.EmpID })" id="@item.EmpID">CPL Balance Detail</a></li>

                                    </ul>
                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>

            </div>
            <!-- /basic datatable -->
        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->
</div>
<!-- /page container -->
<script type="text/javascript" src="~/Areas/Attendance/Scripts/LeaveQuota.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        DDFYChnage();
    });
</script>
