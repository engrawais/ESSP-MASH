@model ESSPCORE.Attendance.VMRosterContinue
@using (Html.BeginForm("RosterContinue", "Roster", FormMethod.Post, new { name = "formCreateID", id = "formCreateID" }))
{
    @Html.HiddenFor(model=>model.RotaAppID)
    @Html.AntiForgeryToken()
    <div class="modal-header bg-blue-800">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <i class="icon-menu7"></i> &nbsp;Roster Continue
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-3 text-semibold">End Date</div>
                <div class="col-md-6">
                    @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(model => model.EndDate)
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-custom-grey bg-grey" })
        <button type="submit" id="btnPostCreate" class="btn btn-custom bg-blue-800" value="Submit">Submit</button>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
    });
</script>

