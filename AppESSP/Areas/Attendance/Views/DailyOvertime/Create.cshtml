@model ESSPCORE.EF.DailyOvertime

@using (Html.BeginForm(null, null, FormMethod.Get, new { name = "formCreateID", id = "formCreateID" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header bg-blue">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <i class="icon-menu7"></i> &nbsp;Daily Overtime
        </h4>
    </div>

    <div class="modal-body">
        <div class="form-horizontal">
            <section class="col-md-8">
                <div class="form-group">
                    <div class="control-label text-semibold col-md-12  ">In case of Rest or Gazetted holidays system will consider actual overtime. If you want to add One CPL against 4 Hours then you should enter 8 Hours in CPL Hours</div>
                </div>
                <div class="form-group">
                    <div class="form-inline">
                        <label class="col-lg-2 col-md-2 col-sm-2 control-label text-semibold">Emp No<span style="color:red;">*</span></label>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="input-group">
                                <input id="EmpNo" name="EmpNo" autofocus type="text" class="form-control" placeholder="EMP-00001" focus />
                                <span class="input-group-btn">
                                    <button type="button" name="btnGetEmployee" value="Search" class="btn btn-primary bg-success" id="btnGetEmployee" style="padding-bottom:.6em">Search</button>
                                </span>
                            </div>
                        </div>
                        <div class="control-label text-semibold col-md-2 text-right "> Date<span style="color:red;">*</span></div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(x => x.OTDate, new { @class = "form-control required", @type = "date" })
                            @Html.ValidationMessageFor(model => model.OTDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label text-semibold col-md-3 ">Single OT (hours)</div>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.SingleEncashableOT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SingleEncashableOT, "", new { @class = "text-danger" })
                    </div>
                    <div class="control-label text-semibold col-md-3  ">Double OT(hours)</div>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.DoubleEncashbaleOT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DoubleEncashbaleOT, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label text-semibold col-md-3  ">CPL OT (hours)</div>
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.CPLOT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CPLOT, "", new { @class = "text-danger" })
                    </div>
                </div>

            </section>
            <section class="col-md-4">
                <div class="content-group">
                    <div class="panel-body bg-blue border-radius-top text-center" style="height:50px">
                        <h6 class="text-bold" style="margin-top:-5px">
                            EMPLOYEE INFORMATION
                        </h6>
                    </div>
                    <div class="panel panel-flat">
                        <div class="table-responsive">
                            <table class="table table-condensed">

                                <tbody>
                                    <tr>
                                        <td class="small text-bold">
                                            Name:
                                        </td>
                                        <td>
                                            <h6 id="EName" class="small"></h6>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="small text-bold">
                                            Position:
                                        </td>

                                        <td>
                                            <h6 id="EDesignation" class="small"></h6>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="small text-bold">
                                            OU:
                                        </td>

                                        <td>
                                            <h6 id="EOU" class="small"></h6>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="small text-bold">
                                            DOJ:
                                        </td>
                                        <td>
                                            <h6 id="EDOJ" class="small"></h6>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>

        </div>

    </div>
    <div class="modal-footer">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary bg-primary-300", tabindex = 1 })
        <button type="button" id="btnPostCreate" class="btn btn-success bg-success-800" value="Submit">Submit</button>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        DailyOvertimePostCreate();
        EmployeeInfo();
    });
</script>

