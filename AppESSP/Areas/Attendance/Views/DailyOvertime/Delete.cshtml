@model ESSPCORE.EF.DailyOvertime
<div class="modal-header bg-blue">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">
        <i class="icon-menu7"></i> &nbsp;Delete Daily Overtime
    </h4>
</div>
@using (Html.BeginForm(null, null, FormMethod.Get, new { name = "formDeleteID", id = "formDeleteID" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PDailyOTID)
    @Html.HiddenFor(model => model.AddedDate)
    @Html.HiddenFor(model => model.SingleEncashableOT)
    @Html.HiddenFor(model => model.DoubleEncashbaleOT)
    @Html.HiddenFor(model => model.OTDate)
    @Html.HiddenFor(model => model.EmployeeID)
    @Html.HiddenFor(model => model.CPLOT)
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                <h3 class="text-center"> Are you sure you want to delete this Leave Application?</h3>
                <div class="text-center">
                    <h5>
                        @Html.ValidationMessageFor(model => model.OTDate, "", new { @class = "text-danger" })
                    </h5>
                </div>
            </div>
        </div>
    </div>
}
<div class="modal-footer">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary bg-primary-300" })
    <input type="button" id="btnPostDelete" class="btn btn-danger bg-danger-800" value="Delete" />

</div>
<script type="text/javascript">
    $(document).ready(function () {
        DailyOvertimePostDelete();
    });
</script>

