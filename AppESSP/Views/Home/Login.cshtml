@model ESSPCORE.EF.AppUser
@{
    ViewBag.Title = "Login -(MASH:ESSP)";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MASH - HRMS</title>

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/icons/icomoon/styles.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/core.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/components.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/assets/css/colors.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script type="text/javascript" src="~/Theme/assets/js/plugins/loaders/pace.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/core/libraries/jquery.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/core/libraries/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/plugins/loaders/blockui.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/plugins/ui/nicescroll.min.js"></script>
    <script type="text/javascript" src="~/Theme/assets/js/plugins/ui/drilldown.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script type="text/javascript" src="~/Theme/assets/js/core/app.js"></script>
    <!-- /theme JS files -->
    <style>
        .login-form {
            background-color: transparent;
        }
    </style>

</head>

<body class="login-container login-cover login-form">

    <!-- /main navbar -->
    <!-- Page container -->
    <div class="page-container ">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Simple login form -->
                <form action="~/Home/Login" enctype="multipart/form-data" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="col-md-3 " style="margin-left:485px">
                        <div class="panel panel-body login-form">
                            <img src="~/Theme/assets/images/bcl_logo_final.png" style="width:90%;margin-left:12px" class="center" />
                            <h4 class="text-white text-center text-semibold">Employee Self Service Portal <small class="display-block text-white text-bold"><strong> Enter your credentials below</strong></small></h4>
                            <br />
                            <div class="form-group has-feedback has-feedback-left">
                                <input type="text" id="UserName" name="UserName" class="form-control" placeholder="Username">
                                <div class="form-control-feedback">
                                    <i class="icon-user text-blue-800"></i>
                                </div>
                            </div>
                            <div class="form-group has-feedback has-feedback-left">
                                <input type="password" id="Password" name="Password" class="form-control" placeholder="Password">
                                <div class="form-control-feedback">
                                    <i class="icon-lock2 text-blue-800"></i>

                                </div>
                                <div class="text-bold">
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-block btn-custom text-semibold bg-blue-800">Sign in <i class="icon-enter3 position-right"></i></button>
                            </div>

                            <div class="text-center">
                                <a href="~/Home/ForgetPassword"><strong class=" text-white text-bold">Forgot password ?</strong> </a>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- /simple login form -->

            </div>
            <!-- /main content -->

        </div>
        <!-- /page content -->

    </div>
    <!-- /page container -->
    <!-- Footer -->
    <div class="footer text-center">
        <span class="text-indigo-800 text-bold"><strong>&copy; 2019. </strong></span><a href="#" class="text-grey-800 text-black">Employee Self Service Portal</a><span class="text-black text-bold"><strong class="text-indigo-800"> by </strong></span><a href="http://www.cns.com.pk/" target="_blank" class="text-blue-800 text-black">Computer Networking and Services (CNS)</a>
    </div>
    <!-- /footer -->
</body>

</html>
